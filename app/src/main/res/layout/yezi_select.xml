<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >


    <TextView
        android:id="@+id/textView14"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="@string/叶子时长"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:gravity="right"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        tools:ignore="RtlHardcoded">

        <SeekBar
            android:id="@+id/seek_yezi"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:max="50"
            android:progress="1"
            />

        <TextView
            android:id="@+id/yezi_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:text="@string/叶子text"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:gravity="right"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:ignore="RtlHardcoded">


        <Button
            android:id="@+id/back_7"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/none"
            android:text="@string/取消"
            android:textColor="#169BD5"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/sure_yezi"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/none"
            android:text="@string/确认"
            android:textColor="#169BD5"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>